<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.peter.georeminder.WholeMapScreen"
    android:id="@+id/map_drawer_layout">

    <include
        layout="@layout/content_whole_map_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_map_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        map:headerLayout="@layout/nav_drawer_header_main"
        map:menu="@menu/menu_nav_whole_map"/>

</android.support.v4.widget.DrawerLayout>
