<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/dialog_delete"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/dialog_delete_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/dialog_delete_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_delete_text"
            android:textSize="32dp"
            android:layout_toRightOf="@+id/dialog_delete_img"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:clickable="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_share"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/dialog_share_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/dialog_share_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_share_text"
            android:textSize="32dp"
            android:layout_toRightOf="@+id/dialog_share_img"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:clickable="true"/>

    </RelativeLayout>

</LinearLayout>